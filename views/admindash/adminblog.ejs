        .card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            height: 100vh;
            padding: 20px;
            margin: 10px;
            text-align: center;
        }
        #deletebutton{
          position: absolute;
          right: 0;
        }
        .card img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 15px;
        }
        .label {
            font-size: 14px;
            color: #007b5e;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .name {
            font-size: 20px;
            color: #333;
            margin-bottom: 10px;
        }
        .category {
            font-size: 16px;
            color: #007b5e;
            margin-bottom: 10px;
        }
        .description {
            font-size: 16px;
            color: #555;
        }
    </style>
<body > 
  

<section id="section" style="width: 100%; height: 100%;">
    
            <% blogs.forEach (blog =>{%>
                
              <div class="card">
                <img src="<%= blog.blogimg%>" alt="Residential Solar Panel Installation" style="width: 100%; height: 46%;">
                <div class="label">Name:</div>
                <div class="name"><%= blog.blogtitle%></div>
        
                <div class="label">Category:</div>
                <div class="category"><%= blog.blogcategory%></div>
        
                <div class="label">Description:</div>
                <div class="description">  <%= blog.blogdescription%> </div>
            
         
            
            </div>
            
             <%});%>     
            
        </section>
        
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>

        .card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            height: 100vh;
            padding: 20px;
            margin: 10px;
            text-align: center;
        }
        #deletebutton{
          position: absolute;
          right: 0;
        }
        .card img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 15px;
        }
        .label {
            font-size: 14px;
            color: #007b5e;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .name {
            font-size: 20px;
            color: #333;
            margin-bottom: 10px;
        }
        .category {
            font-size: 16px;
            color: #007b5e;
            margin-bottom: 10px;
        }
        .description {
            font-size: 16px;
            color: #555;
        }
    </style>
<body > 
  

<section id="section" style="width: 100%; height: 100%;">
    
            <% blogs.forEach (blog =>{%>
                
              <div class="card">
                <img src="<%= blog.blogimg%>" alt="Residential Solar Panel Installation" style="width: 100%; height: 46%;">
                <div class="label">Name:</div>
                <div class="name"><%= blog.blogtitle%></div>
        
                <div class="label">Category:</div>
                <div class="category"><%= blog.blogcategory%></div>
        
                <div class="label">Description:</div>
                <div class="description">  <%= blog.blogdescription%> </div>
            
                <div  class="Add to Cart" id="<%= blog.id %>" class="class=" data-bs-toggle="modal"  data-bs-target="#exampleModal"" " ><button class="btn btn-primary">delete</button></div>
                <!-- <div class="class=" data-bs-toggle="modal"  data-bs-target="#exampleModal"" "><button>delete blog</button></div> -->
              </div>
            
            </div>
            
             <%});%>     
            
        </section>
        
          
          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">DELETE THIS ITEM</h5>
                  
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  CONFIRM THE NAME OF THE ITEM
                </div>
               <form action="/delete" method="post">
                <input type="text" placeholder="product name" name="title">
                <input type="submit">
               </form>
              </div>
            </div>
          </div>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
  <style>
  /* Basic Reset */
  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
  }
  
  body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      background-color: #f4f4f4;
      color: #333;
  }
  
  header {
      background-color: #333;
      color: #fff;
      padding: 20px;
      text-align: center;
  }
  
  header h1 {
      margin-bottom: 10px;
  }
  
 
  
  .blog-posts {
      display: grid;
      grid-template-columns: repeat(4, 1fr); /* 4 columns layout */
      gap: 20px;
  }
  
  .blog-post {
      background-color: #fff;
      padding: 15px;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
  }
  
  .blog-post img {
      max-width: 100%;
      height: auto;
      border-radius: 5px;
  }
  
  .blog-post h4 {
      margin: 15px 0;
      color: #333;
  }
  
  .blog-post p {
      margin-bottom: 15px;
      color: #666;
  }
  
  .blog-post a {
      text-decoration: none;
      color: #007BFF;
      font-weight: bold;
  }
  
  .blog-post a:hover {
      color: #0056b3;
  }
  
  .blog-post:hover {
      transform: translateY(-5px);
  }
  
  footer {
      background-color: #333;
      color: #fff;
      text-align: center;
      padding: 10px;
      margin-top: 20px;
      font-size: 14px;
  }
</style>
  
 
